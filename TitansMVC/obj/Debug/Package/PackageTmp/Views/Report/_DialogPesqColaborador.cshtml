@using TitansMVC.Models

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 class="modal-title">Pesquisar Colaborador</h3>
        </div>

        <div class="modal-body">
            <div class="form-horizontal">
                <b>Pesquisar Por:</b>
                <br />
                @Html.RadioButton("searchColBy", "Id", true, new { @id = "it-id", @style = "margin-left: 10px" })<text>ID</text>
                @Html.RadioButton("searchColBy", "Nome", false, new { @id = "it-nome", @style = "margin-left: 10px" })<text>Nome</text>
                <br />
                @Html.TextBox("search-col", null, new { @placeholder = "Texto a ser pesquisado" })

                <input type="button" onclick=" pesquisarColaborador() " value="Pesquisar" style="margin-left: 3px" class="btn-primary" />
            </div>
            <div id="colaboradoresPesquisados">
                @{ var colaboradores = new List<ColaboradorModel>();}
                @Html.Partial("_GridPesqColaboradores", colaboradores)
            </div>

        </div>
        <div class="modal-footer">
            <span id="progress" class="text-center" style="display: none;">
                <img src="/images/wait.gif" alt="wait" />
                Wait..
            </span>

            @*<input id="btnSelecionar" class="btn btn-primary" type="button" onclick=" selecionarColaborador() " value="Incluir" data-dismiss="modal" />*@
            <button class="btn btn-warning" data-dismiss="modal">Fechar</button>
        </div>
    </div>
</div>