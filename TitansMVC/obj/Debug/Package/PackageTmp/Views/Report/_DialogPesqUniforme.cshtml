@using TitansMVC.Models

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 class="modal-title">Pesquisar Uniforme</h3>
        </div>

        <div class="modal-body">
            <div class="form-horizontal">
                <b>Pesquisar Por:</b>
                <br />
                @Html.RadioButton("searchUniformeBy", "Id", true, new { @id = "it-id", @style = "margin-left: 10px" })<text>ID</text>
                @Html.RadioButton("searchUniformeBy", "Nome", false, new { @id = "it-nome", @style = "margin-left: 10px" })<text>Nome</text>
                <br />
                @Html.TextBox("search-Uniforme", null, new { @placeholder = "Texto a ser pesquisado" })

                <input type="button" onclick=" pesquisarUniforme() " value="Pesquisar" style="margin-left: 3px" class="btn-primary" />
            </div>
            <div id="uniformesPesquisados">
                @{ var uniformes = new List<UniformeModel>();}
                @Html.Partial("_GridPesqUniformes", uniformes)
            </div>

        </div>
        <div class="modal-footer">
            <span id="progress" class="text-center" style="display: none;">
                <img src="/images/wait.gif" alt="wait" />
                Wait..
            </span>

            <button class="btn btn-warning" data-dismiss="modal">Fechar</button>
        </div>
    </div>
</div>
