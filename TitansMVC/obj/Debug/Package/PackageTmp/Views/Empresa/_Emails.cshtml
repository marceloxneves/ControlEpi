@using TitansMVC.Helpers

@model IEnumerable<TitansMVC.Models.EmailEmpresaModel>  

@if ((Model != null) && Model.Any())
{
    <br />

    <div class="panel panel-default">
        <table class="table table-striped table-bordered table-hover table-responsive">
            <tr>
                <th>Descrição</th>
                <th>E-mail</th>
                <th width="50px"></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a href="@Url.Action("RemoverEmail", "Empresa", new {id = item.Id})" data-ajax='true' data-ajax-update='#emails' data-ajax-mode='replace' title="Excluir Registro">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
}
