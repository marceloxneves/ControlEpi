@model IEnumerable<TitansMVC.Models.EpiModel>

@{
    ViewBag.Title = "Index";
}
@if (Model != null && Model.Any())
{
    <h4>EPI's com CA a Vencer</h4>

    <div class="panel panel-default">
        <table class="table table-striped table-bordered table-hover table-responsive">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th style="width: 200px; text-align: center">
                    @Html.DisplayNameFor(model => model.ValidadeCa)
                </th>
                @*<th style="width: 50px"></th>*@
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td style="text-align: center">
                        @if (item.ValidadeCa != null)
                        {
                            @item.ValidadeCa.Value.ToString("dd/MM/yyyy")
                        }
                    </td>
                    @*<td style="text-align: center">
                        <a href="@Url.Action("Edit", "Epi", new {id = item.Id})" title="Alterar Registro"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                    </td>*@
                </tr>
            }
        </table>
    </div>
}
