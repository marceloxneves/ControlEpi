<div class="modal-dialog" style="width: 400px">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 class="modal-title">Criar Assinatura</h3>
        </div>

        <div class="modal-body">
            @*<div class="form-horizontal">*@
            @*<canvas id="quadro" class="jSignature" style="background: beige;"></canvas>*@
            <form method="post" action="" class="sigPad">
                @*<label for="name">Digite seu nome</label>
                    <input type="text" name="name" id="name" class="name">
                    <p class="typeItDesc">Review your signature</p>*@
                @*<p class="drawItDesc">Assine Agora</p>*@

                <p class="drawItDesc">Assine na linha desenhada no quadro abaixo:</p>
                <ul class="sigNav">
                    <li class="drawIt"><a href="#draw-it">Assinar</a></li>
                    <li class="clearButton"><a id="limparAssinCad" href="#clear">Limpar Assinatura</a></li>
                </ul>
                <div class="sig sigWrapper">
                    <div class="typed"></div>
                    <canvas id="quadroAssinatura" class="pad" width="198" height="50" style="background: beige"></canvas>
                    <input type="hidden" name="output" class="output">
                </div>
                @*<button type="submit">I accept the terms of this agreement.</button>*@
            </form>
            @*</div>*@
        </div>
        <div class="modal-footer">
            <span id="progress" class="text-center" style="display: none;">
                <img src="/images/wait.gif" alt="wait" />
                Wait..
            </span>

            <input id="btnSalvarAssinatura" class="btn btn-primary" type="button" onclick=" salvarAssinatura() " value="Criar Assinatura" title="Criar assinatura" data-dismiss="modal" />
            <button class="btn btn-warning" onclick="limparAssinCad()" data-dismiss="modal">Fechar</button>
        </div>
    </div>
</div>
