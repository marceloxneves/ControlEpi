@using Newtonsoft.Json
@model IEnumerable<TitansMVC.Models.Relatorios.RelConsumoEpiModel>

@if (Model != null && Model.Any())
{
    <table id="tblRelEpis" class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome_epi)
            </th>
            <th class="colHideSmart">
                @Html.DisplayNameFor(model => model.nome_colaborador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.epi_custo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.qtde_epis)
            </th>
            <th class="colHideSmart">
                @Html.DisplayNameFor(model => model.custo_total)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nome_epi)
                </td>
                <td class="colHideSmart">
                    @Html.DisplayFor(modelItem => item.nome_colaborador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.epi_custo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.qtde_epis)
                </td>
                <td class="colHideSmart">
                    @Html.DisplayFor(modelItem => item.custo_total)
                </td>
            </tr>
        }
    </table>
}
else
{
    <span>Nenhum Resultado para o Registro Pesquisado</span>    
}

