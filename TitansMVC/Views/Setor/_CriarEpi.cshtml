<table>
    <tr>
        <td style="width: 330px">
            <div class="form-group">
                <div class="col-sm-9">
                    @Html.Label("EPI")
                    @Html.DropDownList("EpiId", null, "Selecione", new {@class = "form-control", @id = "ddlEpis"})
                </div>
            </div>
        </td>

        <td>
            <div class="form-group">
                <div class="col-sm-9">
                    @Html.Label("Durabilidade")
                    @Html.TextBox("txtValDias", null, new { @class = "form-control", @onkeypress="return SomenteNumero(event)", @style="width: 200px", @placeholder = "Durabilidade (em dias)" })
                </div>
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <input id="btnCreateEpi" class="btn btn-primary" type="button" onclick=" adicionarEpi() " value="Incluir"/>
            <span id="loading" class="text-center" style="display: none;">
                <img src="/images/wait.gif" alt="aguarde" />
                Aguarde...
            </span>
        </td>
    </tr>
</table>
