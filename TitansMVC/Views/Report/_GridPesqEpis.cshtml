@model IEnumerable<TitansMVC.Models.EpiModel>
@{
    var epi = new TitansMVC.Models.EpiModel();
}

@{
    //,rowsPerPage: 5
    var grid = new WebGrid(Model, canPage: false, selectionFieldName: "selectedRow", ajaxUpdateContainerId:
    "gridContent");
    //grid.Pager(WebGridPagerModes.NextPrevious);
}
<div id="gridContent">
    @grid.GetHtml(tableStyle: "webGrid",
        headerStyle: "header",
        alternatingRowStyle: "alt",
        selectedRowStyle: "select",
        columns: grid.Columns(
            //grid.Column("Id", format: (item) => item.GetSelectLink(Convert.ToString(item.Id))),
                    grid.Column("Id", "Id", format: (item) => { var links = string.Format("<a href='javascript:EpiEditGridRow({0})'>" + item.Id + "</a>", item.Id); return Html.Raw(links); }),
            grid.Column("Nome", " Nome")
            ))
    @if (grid.HasSelection)
    {
        <b>grid.SelectedRow</b>
    }
</div>




