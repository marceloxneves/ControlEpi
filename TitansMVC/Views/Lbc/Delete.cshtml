@model TitansMVC.Models.LbcModel

@{
    ViewBag.Title = "Delete";
}

<h3>Confirma Exclusão deste registro?</h3>
<div>
    <h4>Unidade de Negócio</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger" title="Excluir o registro (operação definitiva)" /> |
            @Html.ActionLink("Voltar à Tela de Pesquisa", "Index", null, new { @class = "btn btn-default", title = "Voltar à tela de pesquisa sem excluir o registro." })
        </div>
    }

    @if (ViewBag.PossuiCentrosCustos == true)
    {
        <script type="text/javascript">
            alert("Esta Unidade de Negócio possui vínculos e não pode ser excluída.");
        </script>
    }
</div>
