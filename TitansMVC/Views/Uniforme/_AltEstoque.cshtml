<div class="modal-dialog" style="width: 300px">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 class="modal-title">Alterar Estoque</h3>
        </div>

        <div class="modal-body" style="margin-left: 50px">
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-sm-9">
                        @Html.DisplayText("txtProdutoAlmox")
                        @Html.Hidden("hdIdEst")
                        @Html.Hidden("hdIdProd")
                    </div>
                </div>
                <br />

                <div class="form-group">
                    @Html.Label("Qtde Atual")
                    @Html.TextBox("txtQtde", null, new { @class = "form-control", @onkeypress = "return SomenteNumero(event)", @style = "width:100px" })
                </div>
                <div class="form-group">
                    @Html.Label("Qtde Mínima")
                    @Html.TextBox("txtQtdeMin", null, new { @class = "form-control", @onkeypress = "return SomenteNumero(event)", @style = "width:100px" })
                </div>
                <div class="form-group">
                    @Html.Label("Qtde Máxima")
                    @Html.TextBox("txtQtdeMax", null, new { @class = "form-control", @onkeypress = "return SomenteNumero(event)", @style = "width:100px" })
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <span id="progress" class="text-center" style="display: none;">
                <img src="/images/wait.gif" alt="wait" />
                Wait..
            </span>

            <input id="btnConfirmarAlt" class="btn btn-primary" type="button" onclick="confirmarAlteracao()" value="Confirmar Alteração" data-dismiss="modal" />
            <button class="btn btn-warning" data-dismiss="modal">Fechar</button>
        </div>
    </div>
</div>